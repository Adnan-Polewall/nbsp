@include@ @q@Makefile.inc@q@
@include@ @q@VERSION@q@

DIRS = conf src utils scripts doc filters \
	tclhttpd \
	tclgrads/ext/nbsp \
	tclmetar/dc/nbsp \
	tclupperair/dc/nbsp

all: 
	for dir in ${DIRS}; do \
	(cd $$dir; ${MAKE}) \
	done

install:
	for dir in ${DIRS}; do \
	(cd $$dir; ${MAKE} install) \
	done

clean:
	./configure.sh
	for dir in ${DIRS}; do \
	(cd $$dir; ${MAKE} clean) \
	done
	rm -f *~ Makefile Makefile.inc
