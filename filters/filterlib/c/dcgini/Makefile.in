DCSOURCES = nbspsat.c nbspsatinfo.c

DCHEADERS =
DCOBJECTS = nbspsat.o nbspsatinfo.o

SHAREDSOURCES = err.c io.c util.c unz.c
SHAREDHEADERS = config.h const.h io.h err.h util.h unz.h
SHAREDOBJECTS = err.o io.o util.o unz.o

COMMONOBJECTS = ${SHAREDOBJECTS}
ALLOBJECTS = ${DCOBJECTS} ${COMMONOBJECTS}

TARGET = nbspsat nbspsatinfo

INCDIRS =       @INCDIRS@
LIBDIRS =       @LIBDIRS@
LIBS =          @LIBS@
INSTALL =       @INSTALL@
CC =		@CC@
CCWFLAGS =	@CCWFLAGS@

INCDIRS +=	-iquote ..

CFLAGS +=	${DEBUGFLAGS} -c ${CCWFLAGS} ${INCDIRS}
DEBUGFLAGS =	-g
#DEBUGFLAGS =	-DNDEBUG
LDFLAGS +=	${LIBDIRS} ${LIBS}

all: ${TARGET}

@SUFFIXRULES@ ${HEADERS}
	${CC} ${CFLAGS} $<

err.c: ../err.c
	cp ../err.c .

io.c: ../io.c
	cp ../io.c .

util.c: ../util.c
	cp ../util.c .

unz.c: ../unz.c
	cp ../unz.c .

nbspsat: nbspsat.o ${COMMONOBJECTS}
	${CC} -o nbspsat nbspsat.o ${COMMONOBJECTS} ${LDFLAGS}

nbspsatinfo: nbspsatinfo.o ${COMMONOBJECTS}
	${CC} -o nbspsatinfo nbspsatinfo.o ${COMMONOBJECTS} ${LDFLAGS}

clean:
	rm -f *~ Makefile ${TARGET} ${ALLOBJECTS} ${SHAREDSOURCES}

