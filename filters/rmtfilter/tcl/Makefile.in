@include@ @q@../../../Makefile.inc@q@

TCLTARGET =	rmtfilter.tcl
TCLSOURCES =	rmtfilter.tcl.in
FILTERNAME =	rmtfilter
CONFEXAMPLE =	rmtfilter.conf-ex
TARGET =	${TCLTARGET} ${SAMPLES}
SAMPLES =	rmtfilter.conf-sample

TCLSH =		@TCLSH@
INSTALL =	@INSTALL@

all: ${TARGET}

${TCLTARGET}: ${TCLSOURCES}
	sed -e /%TCLSH%/s##${TCLSH}# ${TCLSOURCES} > ${TCLTARGET}

rmtfilter.conf-sample: rmtfilter.conf
	cp rmtfilter.conf rmtfilter.conf-sample

install: ${TARGET}
	${INSTALL} -m 755 ${TCLTARGET} ${MYLIBEXECDIR}/${FILTERNAME}
	${INSTALL} -m 644 ${SAMPLES} ${CONFEXAMPLE} ${MYCONFDIR}

clean:
	rm -f *~ ${TARGET} Makefile
