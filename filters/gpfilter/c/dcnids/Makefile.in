DCSOURCES = dcnids_extract.c dcnids_transform.c \
	dcnids_shp.c dcnids_csv.c dcnids_dbf.c dcnids_bunz.c \
	dcnids.c dbfread.c dbfwrite.c
DCHEADERS = dcnids.h dcnids_shp.h
DCOBJECTS = dcnids_extract.o dcnids_transform.o \
	dcnids_shp.o dcnids_csv.o dcnids_dbf.o dcnids_bunz.o

SHAREDSOURCES = err.c io.c util.c
SHAREDHEADERS = config.h const.h io.h err.h util.h
SHAREDOBJECTS = err.o io.o util.o

COMMONOBJECTS = ${DCOBJECTS} ${SHAREDOBJECTS}
ALLOBJECTS = ${COMMONOBJECTS} dcnids.o dbfread.o dbfwrite.o

# TARGET = nbspdcnids nbspradinfo nbspdcnids-dbfread nbspdcnids-dbfwrite
TARGET = nbspdcnids nbspradinfo nbspdcnids-dbfread

INCDIRS =       @INCDIRS@
LIBDIRS =       @LIBDIRS@
LIBS =          @LIBS@ -lbz2
INSTALL =       @INSTALL@
CC =		@CC@
CCWFLAGS =	@CCWFLAGS@

INCDIRS +=	-iquote ..

CFLAGS +=	${DEBUGFLAGS} -c ${CCWFLAGS} ${INCDIRS}
DEBUGFLAGS =	-g
#DEBUGFLAGS =	-DNDEBUG
LDFLAGS +=	${LIBDIRS} ${LIBS}

all: ${TARGET}

@SUFFIXRULES@ ${HEADERS}
	${CC} ${CFLAGS} $<

err.c: ../err.c
	cp ../err.c .

io.c: ../io.c
	cp ../io.c .

util.c: ../util.c
	cp ../util.c .

nbspradinfo: nbspdcnids
	cp nbspdcnids nbspradinfo

nbspdcnids: dcnids.o ${COMMONOBJECTS}
	${CC} -o nbspdcnids dcnids.o ${COMMONOBJECTS} ${LDFLAGS}

nbspdcnids-dbfwrite: dbfwrite.o ${COMMONOBJECTS}
	${CC} -o nbspdcnids-dbfwrite dbfwrite.o ${COMMONOBJECTS} ${LDFLAGS}

nbspdcnids-dbfread: dbfread.o ${COMMONOBJECTS}
	${CC} -o nbspdcnids-dbfread dbfread.o ${COMMONOBJECTS} ${LDFLAGS}

clean:
	rm -f *~ Makefile ${TARGET} ${ALLOBJECTS} ${SHAREDSOURCES}
